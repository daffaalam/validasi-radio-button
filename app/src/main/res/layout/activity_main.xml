<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.daffa.project040917.main">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/xrpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas X RPL"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/xtkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas X TKJ"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/xirpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas XI RPL"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/xitkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas XI TKJ"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/xiirpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas XII RPL"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/xiitkj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas XII TKJ"
            tools:ignore="HardcodedText" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bvld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Validasi"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bclr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bsnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/hsl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

</LinearLayout>
